<!DOCTYPE html>
<html lang="ko">
  <%- include('include/include', { title: 'Register' })%>
  <body>
    <h1>Register</h1>
    <br />
    <form name="form_register">
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input
          type="text"
          class="form-control"
          id="name"
          aria-describedby="emailHelp"
          name="name"
          required
        />
      </div>
      <div class="mb-3">
        <label for="userid" class="form-label">ID</label>
        <input
          type="text"
          class="form-control"
          id="userid"
          aria-describedby="emailHelp"
          name="userid"
          required
        />
      </div>
      <div class="mb-3">
        <label for="pw" class="form-label">Password</label>
        <input
          type="pw"
          class="form-control"
          id="password"
          name="pw"
          required
        />
      </div>
      <button type="button" class="btn btn-primary" onclick="register()">
        Register
      </button>
      <br />
      <br />
    </form>
    <a href="/">HOME</a>

    <script>
      function register() {
        const form = document.forms["form_register"];

        if (!form.checkValidity()) {
          form.reportValidity();
          return;
        }

        axios({
          method: "POST",
          url: "/register",
          data: {
            userid: form.userid.value,
            pw: form.pw.value,
            name: form.name.value,
          },
        });

        alert("회원가입 성공");
        document.location.href = "/login";
      }
    </script>
  </body>
</html>
